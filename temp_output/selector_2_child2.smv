MODULE main
	CONSTANTS
		success, failure, running, invalid;
	DEFINE
		statuses := [selector.status, child1.status, child2.status];
		resume_from_node_0 := -3;
		selector.active := TRUE;
	VAR
		variable_names : define_variables;
		node_names : define_nodes;
		blackboard : blackboard_module(node_names, variable_names, statuses);
		selector : composite_selector_without_memory_2(child1, child2);
		child1 : leaf_default();
		child2 : leaf_default();
	ASSIGN
MODULE composite_selector_without_memory_2(child_0, child_1)
	CONSTANTS
		success, failure, running, invalid;
	DEFINE
		status := active ? internal_status : invalid;
		internal_status :=
			case
				!(child_0.internal_status = failure) : child_0.internal_status;
				!(child_1.internal_status = failure) : child_1.internal_status;
				TRUE : failure;
			esac;
		child_0.active := active;
		child_1.active := child_0.status = failure;
MODULE leaf_default()
	CONSTANTS
		success, failure, running, invalid;
	DEFINE
		status := active ? internal_status : invalid;
		internal_status := input_status;
	VAR
		input_status : {success, running, failure};
MODULE define_variables
	DEFINE
MODULE define_nodes
	DEFINE
		selector := 0;
		child1 := 1;
		child2 := 2;

MODULE blackboard_module(node_names, variable_names, statuses)
	CONSTANTS
		success, failure, running, invalid;
	DEFINE
		variables := [];
		variable_exists := [];
	FROZENVAR
	VAR
	ASSIGN

