MODULE main
    VAR
        system : system_module;
--------------SPECIFICATIONS

LTLSPEC G (system.drone_x != 1);


--------------END OF SPECIFICATIONS

MODULE system_module
    DEFINE
        --END OF BLACKBOARD DEFINITIONS
    VAR
        --START OF BLACKBOARD VARIABLES DECLARATION
        drone_x : 0..2;
        drone_y : 0..2;
        drone_speed : 1..2;
        current_action : 0..4; --left, right, up, down, no_action
        --END OF BLACKBOARD VARIABLES DECLARATION
    ASSIGN
        --START OF BLACKBOARD VARIABLES INITIALIZATION
        --END OF BLACKBOARD VARIABLES INITIALIZATION
        --START OF BLACKBOARD VARIABLES TRANSITION
        next(drone_x) :=
	    case
		current_action = 0 : max(0, drone_x - drone_speed);
		current_action = 1 : min(2, drone_x + drone_speed);
		TRUE : drone_x;
	    esac;
        next(drone_y) :=
	    case
		current_action = 2 : max(0, drone_y - drone_speed);
		current_action = 3 : min(2, drone_y + drone_speed);
		TRUE : drone_y;
	    esac;