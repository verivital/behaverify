MetaBehaVerify:
    'configuration' '{'
    (hypersafety ?= 'hypersafety')
    (use_reals ?= 'use_reals')
    '}' ('end_configuration')?
    'enumerations' '{'
    enumerations *= STRING[',']
    '}' ('end_enumerations')?
    'constants' '{'
    constants *= constant_declaration[',']
    '}' ('end_constants')?
    objects += anything
;
anything:
    (loop_object = loop) | (symbol_object = symbol)
;
loop:
    'for' loop_variables += ID[','] 'in' loop_variable_domains += set_expression[',']
    'such_that' loop_condition = code
    'do' '{' objects += anything '}'
    'end_for'
;
    constant_declaration:
    name = STRING ':=' val = symbol
;
    set_expression:
    ('{' values += symbol[','] '}') | ( '[' min_value = symbol ', ' max_value = symbol ', ' condition = code ']')
;
symbol:
    is_num = STRICTFLOAT |
    is_num = INT |
    is_string = STRING |
    is_bool = BOOL |
    is_id = ID |
    other = /\s+/
;
code:
    (constant = symbol) |
    ('(' function_call = function ')') |
    ('(' code_statement = code ')')
;
function:
    (function_name = 'abs' ',' values = code) |
    (function_name = 'max' ',' values += code[',']) |
    (function_name = 'min' ',' values += code[',']) |
    (function_name = 'sin' ',' values = code) |
    (function_name = 'cos' ',' values = code) |
    (function_name = 'exp' ',' values = code) |
    (function_name = 'tan' ',' values = code) |
    (function_name = 'ln' ',' values = code) |
    (function_name = 'not' ',' values = code) |
    (function_name = 'and' ',' values += code[',']) |
    (function_name = 'or' ',' values += code[',']) |
    (function_name = 'xor' ',' values = code ',' values = code) |
    (function_name = 'xnor' ',' values = code ',' values = code) |
    (function_name = 'imply' ',' values = code ',' values = code) |
    (function_name = 'equiv' ',' values = code ',' values = code) |
    (function_name = 'eq' ',' values = code ',' values = code) |
    (function_name = 'neq' ',' values = code ',' values = code) |
    (function_name = 'lt' ',' values = code ',' values = code) |
    (function_name = 'gt' ',' values = code ',' values = code) |
    (function_name = 'lte' ',' values = code ',' values = code) |
    (function_name = 'gte' ',' values = code ',' values = code) |
    (function_name = 'neg' ',' values = code) |
    (function_name = 'add' ',' values += code[',']) |
    (function_name = 'sub' ',' values = code ',' values = code) |
    (function_name = 'mult' ',' values += code[',']) |
    (function_name = 'idiv' ',' values = code ',' values = code) |
    (function_name = 'mod' ',' values = code ',' values = code) |
    (function_name = 'rdiv' ',' values = code ',' values = code) |
    (function_name = 'floor' ',' values = code) |
    (function_name = 'count' ',' values += code[','])
;
